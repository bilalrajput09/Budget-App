            <h1 class="display-4">Welcome <%= current_user.name %></h1>
            <p class="lead">You can manage your budget from your cell phone.</p>
            <hr class="my-4">
        </div>
<% end %>

<div class="mb-4">
<% @categories.each do |category| %>
