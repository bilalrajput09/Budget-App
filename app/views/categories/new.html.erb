<%= render "layouts/navigation"%>

<%= form_with model: @category, url: categories_path, class: "mt-4", method: :post do |f| %>
    <div class="mb-3">
        <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
    </div>
    

    <div class="mb-3">
        <%= f.file_field :icon, accept: 'image/jpeg,image/gif,image/png', class: "btn btn-sm btn-light", value: "Choose Icon" %>
        <%= f.submit "Add category", class: "btn btn-success" %>
    </div>

<% end %>